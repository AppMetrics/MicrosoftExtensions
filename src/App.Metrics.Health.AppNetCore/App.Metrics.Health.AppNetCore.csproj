<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>App Metrics Health is an open-source .NET Standard library used to define and report results on user defined health checks.</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>App.Metrics.Health.AppNetCore</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>appmetrics;health</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="App.Metrics.Health" Version="$(AppMetricsHealthCoreVersion)" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="$(MicrosoftExtensionsVersion)" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\App.Metrics.Health.Extensions.Configuration\App.Metrics.Health.Extensions.Configuration.csproj" />
    <ProjectReference Include="..\App.Metrics.Health.Extensions.DependencyInjection\App.Metrics.Health.Extensions.DependencyInjection.csproj" />
    <ProjectReference Include="..\App.Metrics.Health.Extensions.Hosting\App.Metrics.Health.Extensions.Hosting.csproj" />
  </ItemGroup>
</Project>